<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMobileApp.Calculator">
    <StackLayout>
        <Entry Placeholder="Enter First number" x:Name="txtNum1"></Entry>
        <Entry Placeholder="Enter Second number" x:Name="txtNum2"></Entry>
        <Label Text="Result" x:Name="lblResult"></Label>
        <Button Text="Add" Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>