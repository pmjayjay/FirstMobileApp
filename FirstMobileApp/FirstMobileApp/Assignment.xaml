<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMobileApp.Assignment"
             BackgroundColor="purple">
    <StackLayout HorizontalOptions="Center"  VerticalOptions="Center" BackgroundColor="White">
        <Entry Placeholder="Enter First name" x:Name="fName" />
        <Entry Placeholder="Enter Last name" x:Name="lName" />
        <Entry Placeholder="Enter Comments" x:Name="comments" />
        <Button Text="Post" Clicked="PostData" ></Button>
        <Button Text="Clear" Clicked="ClearData" ></Button>
    </StackLayout>
</ContentPage>