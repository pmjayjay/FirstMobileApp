        <Entry Placeholder="Enter User Name" x:Name="UserName" />
        <Entry Placeholder="Enter Passowrd" x:Name="Password" />
        <Button Text="Login" Clicked="authenticate" ></Button>
    </StackLayout>
</ContentPage>